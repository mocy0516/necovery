<div class="main users-new">
  <div class="container">
    <h1 class="form-heading">ログインするニャ！</h1>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_tag("/login") do %>
          <p>メールアドレス</p>
          <input name="email">
          <p>パスワード</p>
          <input name="password" type="password">
          <button type="submit">ログイン <i class="fas fa-paw"></i></button>
        <% end %>
      </div>
    </div>
  </div>
</div>

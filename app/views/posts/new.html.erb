<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">デリバリーするニャ！</h1>
    <%= form_tag("/posts/create")do %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message+"ニャ！" %>
            </div>
          <% end %>
          <textarea name="content"><%=@post.content %></textarea>
          <button type="submit">デリバリー <i class="fas fa-paw"></i></button>
        </div>
      </div>
    <% end %>
  </div>
</div>
